/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 136rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: aqua;
}
.tab-bar .tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar .tab-bar-item image {
  width: 80rpx;
  height: 70rpx;
}
.tab-bar .tab-bar-item view {
  font-size: 28rpx;
}
.tab-bar .add {
  flex: 2;
  width: 254rpx;
  height: 209rpx;
  margin-top: -60rpx;
}
.tab-bar .add image {
  width: 100%;
  height: 100%;
}
